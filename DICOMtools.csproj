<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <LangVersion>8.0</LangVersion>
	<Version>1.2.0</Version>
	<Authors>Rob Holme</Authors>
	<Product>DICOM Testing Module for Powershell Core</Product>
    <FileVersion>1.2.0.0</FileVersion>
    <Description>Powershell Core module for DICOM testing</Description>
	<RepositoryUrl>https://github.com/RobHolme/DicomTools</RepositoryUrl>
    <PostBuildEvent>XCOPY /Y "$(TargetDir)DICOMtools.dll" "$(ProjectDir)..\..\..\module\lib\"</PostBuildEvent>
  </PropertyGroup>

  <ItemGroup>
    <Compile Include=".\src\**\*.cs"> 
      <Link>notimportant</Link>
    </Compile>
  </ItemGroup>

  <ItemGroup>
  	<PackageReference Include="fo-dicom.NetCore" Version="4.0.7" />
    <PackageReference Include="Microsoft.Bcl.AsyncInterfaces" Version="1.1.1" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="2.2.0" />
    <PackageReference Include="Microsoft.Extensions.Options" Version="2.2.0" />
    <PackageReference Include="System.Text.Encoding.CodePages" Version="4.6.0" />
    <PackageReference Include="System.Text.Json" Version="4.7.2" />
    <PackageReference Include="PowerShellStandard.Library" Version="5.1.0"/>
  </ItemGroup>

</Project>